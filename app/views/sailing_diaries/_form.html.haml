= form_for @sailing_diary.new_record? ? [@canoe, @sailing_diary] : @sailing_diary do |f|
  .form-group
    = link_to '+ 느낌', '#', class: 'action-emotion-label', data: { 'emotion-label-target': 'form textarea.action-emotion-textarea' }

  .form-group
    .input-group
      = f.date_field :sailed_on, value: @sailing_diary.sailed_on || Date.current, class: 'form-control'

  .form-group
    ~ f.text_area :body, placeholder: '오늘 나는...', class: 'form-control action-emotion-textarea action-autoresize', data: { 'emotion-textarea-sign-values': Emotion.sign.values.map(&:to_s).join(' '), 'emotion-textarea-sign-texts': Emotion.sign.values.map(&:text).join(' ') }

  .form-group
    = f.submit '저장', class: 'btn btn-primary'
