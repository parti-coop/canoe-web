.container-fluid
  .row
    .col-sm-3.col-md-2.sidebar
      = render 'canoes/sidebar'

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      .page-header
        %h2
          항해일지
          %small.pull-right
            = link_to '쓰기', new_canoe_sailing_diary_path, class: 'btn btn-primary'

      %ul
        - @sailing_diaries.each do |diary|
          %li[diary]
            %h5
              = diary.user.nickname
              %small
                = diary.sailed_on
                = link_to '수정', [:edit, @canoe, diary]
                = link_to '삭제', [@canoe, diary], method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }

            %p= diary.body
