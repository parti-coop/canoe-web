#site-header
  %nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target": "#collapsable", "data-toggle": "collapse", type: "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{ href: root_path }
          카누

      .collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li
              %a= current_user.name
            %li
              = link_to destroy_user_session_path, method: :delete do
                로그아웃
          - else
            %li
              = link_to user_omniauth_authorize_path(provider: :facebook), class: 'btn btn-join btn-join-facebook btn-block' do
                %i.fa.fa-facebook.fa-fw
                페이스북으로 가입/로그인
            %li
              = link_to user_omniauth_authorize_path(provider: :twitter), class: 'btn btn-join btn-join-twitter btn-block' do
                %i.fa.fa-twitter.fa-fw
                트위터로 가입/로그인
