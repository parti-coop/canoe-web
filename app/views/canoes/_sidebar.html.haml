%ul.nav.nav-sidebar
  %li
    = link_to @canoe do
      = image_tag @canoe.logo_url, style: 'width: 100%;'
      %h3= @canoe.title

    - if @canoe.receivable_boarding_request? current_user
      %div{ style: 'padding: 0 20px;' }
        = link_to '가입 신청', boarding_requests_path(canoe_id: @canoe), method: :post, class: 'btn btn-primary btn-block'
    - if @canoe.boarding_requested? current_user
      %div{ style: 'padding: 0 20px;' }
        가입 신청 중

%ul.nav.nav-sidebar
  %li
    = link_to canoe_discussions_path(@canoe) do
      Discussions
      %span.count= @canoe.discussions.count
  %li
    %a{:href => "#"}
      Proposals
  %li
    = link_to canoe_sailing_diaries_path(@canoe) do
      Sailing Diaries
      %span.count= @canoe.sailing_diaries.count
  %li
    %a{:href => "#"} Wiki
  %li
    %a{:href => "#"} Chat
  %li
    = link_to canoe_memberships_path(@canoe) do
      Members
      %span.count= @canoe.memberships.count
      - if @canoe.boarding_requests.any?
        %div.text-danger
          (Boarding Request #{@canoe.boarding_requests_count})
  %li
    = link_to [:edit, @canoe] do
      Setting
