%section
  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        = render 'site_sidebar'

      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main

        .page-header
          %h2 전체 카누
        .row
          - @canoes.each do |canoe|
            .col-sm-6.col-md-4
              .thumbnail
                %img{:alt => "100%x200", "data-holder-rendered" => "true", "data-src" => "holder.js/100%x200", :src => "data:image/svg+xml;base64,", :style => "height: 200px; width: 100%; display: block;"}
                .caption
                  %h3
                    = link_to canoe.title, canoe
                  %p ...
                  %p
                    %a.btn.btn-primary{:href => "#", :role => "button"} Button
                    %a.btn.btn-default{:href => "#", :role => "button"} Button
